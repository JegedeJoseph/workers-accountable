{
  "name": "au-chapel-workers-api",
  "version": "1.0.0",
  "description": "Backend API for AU Chapel Workers Management System",
  "main": "dist/server.js",
  "scripts": {
    "dev": "npx ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "npx tsc",
    "start": "node dist/server.js",
    "postinstall": "npm run build",
    "seed": "npm run build && node dist/config/seed.js",
    "seed:prod": "node dist/config/seed.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "mongodb",
    "jwt",
    "authentication"
  ],
  "author": "AU Chapel",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
